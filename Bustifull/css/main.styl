html
    box-sizing: border-box
    -ms-overflow-style: scrollbar
    font-family: 'Rubik', sans-serif
    font-size: 21vw
    overflow-x: hidden

@media (min-width: 481px) {
  html {
    font-size: 100px;
    overflow-x: hidden;
  }
}

body
    margin: 0
    color: #141414

img
    width: 100%
    height: auto

*,::after,::before
    box-sizing: inherit

// header and header-menu

.header
    position: relative
    &-nav
        display: flex 
        justify-content: space-between
        max-height: .85rem
        padding: .11rem .29rem
        background: #00BBC7
        &__img
            width: 1.4398rem
            height: .4396rem
    &-basket
        display: flex
        align-items: center
        text-decoration: none
        &__img
            width: .30rem
            height: .33rem
    &-button
        background-color: inherit
        border: none
        outline: none
        &__img
            display: block
            margin: auto
            width: .35rem
            height: .21rem
    &-menu
        position: absolute
        z-index: 2
        display: flex
        flex-direction: column
        bottom: -1.05rem
        left: 0
        width: 100vw
        list-style: none
        padding: 0
        font-style: normal
        font-weight: normal
        font-size: .2rem
        line-height: .24rem
        text-align: center
        margin: auto
        background: #00BBC7
        padding: .11rem .29rem
        transition: .4s ease
        &__link
            text-decoration: none
            color: #fff
            margin-bottom: .05rem

// jumbotron

.jumbotron
    position: relative
    background-color: #fff
    &-back
        min-height: 5.86rem
        background-image: url('../img/jumbotron-back.png')
        background-repeat: no-repeat
        background-size: cover
    &-prod
        position: absolute
        width: 2.21rem
        height: 2.11rem
        z-index: 2
        top: 2.55rem
        left 50%
        background-image: url('../img/product2.png')
        background-repeat: no-repeat
        background-size: cover

// about sectoion

.about
    margin-bottom: .45rem
    &-title1
        font-style: normal
        font-weight: 500
        font-size: .25rem
        line-height: 99.19%
        letter-spacing: 0.01em
        text-transform: uppercase
        color: #00BBC7
    &-title2
        font-weight: 900
        font-size: .4rem
        line-height: 99.19%
        letter-spacing: 0.01em
        text-transform: uppercase
        color: #00BBC7
        margin-top: .15rem
    &-text
        font-style: normal
        font-weight: 500
        font-size: .2rem
        line-height: 99.19%
        letter-spacing: 0.03em
    &-price
        display: flex
        margin: .2rem 0
        &__main
            font-style: normal
            font-weight: 500
            font-size: .8rem
            line-height: 99.19%
            letter-spacing: 0.03em
            text-transform: uppercase
            margin: 0 .2rem 0 0
        &__second
            font-style: normal
            font-weight: 500
            font-size: .4rem
            line-height: 99.19%
            letter-spacing: 0.03em
            text-decoration-line: line-through
            text-transform: uppercase
            margin: 0
    &-button
        display: block
        font-style: normal
        font-weight: bold
        font-size: .22rem
        line-height: 99.19%
        letter-spacing: 0.03em
        text-transform: uppercase
        color: #FFFFFF
        background: #9425EB
        box-shadow: 0px .04rem .04rem rgba(0, 0, 0, 0.25)
        border-radius: .05rem
        text-decoration: none
        text-align: center
        padding: .3rem 0

//advantages section

.advantages
    margin-bottom: .4rem
    &-first &-image
        display: block
        width: 3.52rem
        height: 2.71rem
        margin: auto
    &-title
        font-weight: 900
        font-size: .4rem
        line-height: 99.19%
        letter-spacing: 0.03em
        text-transform: uppercase
        color: #00BBC7
        margin: .3rem 0
    &-text
        font-style: normal
        font-weight: 500
        font-size: .2rem
        line-height: 99.19%
        letter-spacing: 0.03em
    &-small
        font-style: normal
        font-weight: 300
        font-size: .2rem
        line-height: 99.19%
        letter-spacing: 0.03em
    &-list
        font-style: normal
        font-weight: normal
        font-size: .2rem
        line-height: 99.19%
        letter-spacing: 0.03em
        list-style: none
        padding-left: .3rem
        &__item
            position: relative
            margin-bottom: .3rem
            &:before
