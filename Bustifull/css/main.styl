                background: #00BBC7
                border-radius: 50%
    &-description
        font-style: normal
        font-weight: 500
        font-size: .2rem
        line-height: 99.19%
        letter-spacing: 0.03em
        color: #FFFFFF
        background: #9425EB
        border-radius: .05rem
        padding: .27rem .23rem
        
// form section

.form
    background-color: #fff
    background-image: url('../img/form.png')
    background-repeat: no-repeat
    background-size: cover
    max-height: 5.49rem
    padding: .6rem 0
    &-container
        max-width: 6.1rem !important
    &-title
        display: block
        margin: auto
        font-style: normal
        font-weight: bold
        font-size: .25rem
        line-height: 99.19%
        text-align: center
        letter-spacing: 0.03em
        text-transform: uppercase
        margin-top: 0
        max-width: 3.4rem
        margin-bottom: .4rem
    &-label
        display: flex
        flex-direction: column
        font-style: normal
        font-weight: 500
        font-size: .2rem
        line-height: 99.19%
        letter-spacing: 0.03em
        margin-bottom: .28rem
    &-input
        background: #FFFFFF
        box-shadow: 0px .04rem .04rem rgba(0, 0, 0, 0.1)
        border-radius: .05rem
        padding: .2rem .1rem
        border: none
        margin-top: .2rem
        font-style: normal
        font-weight: normal
        font-size: .2rem
        line-height: 99.19%
        letter-spacing: 0.03em
    &-button
        display: block
        font-style: normal
        font-weight: bold
        font-size: .22rem
        line-height: 99.19%
        text-align: center
        letter-spacing: 0.03em
