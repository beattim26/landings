// question block

.question
    background-color: #fff
    background-image: url('../img/question.png')
    background-repeat: no-repeat
    background-size: cover
    padding: .67rem 0
    margin-bottom: .6rem
    &-title
        font-style: normal
        font-weight: bold
        font-size: .25rem
        line-height: 99.19%
        text-align: center
        letter-spacing: 0.03em
        text-transform: uppercase
        margin-top: 0
        margin-bottom: .37rem
    &-block
        background: #FFFFFF
        box-shadow: 0px .04rem .04rem rgba(0, 0, 0, 0.1)
        border-radius: .1rem
        padding: .34rem .32rem
        margin-bottom: .3rem
        &__title
            font-style: normal
            font-weight: normal
            font-size: .25rem
            line-height: 99.19%
            display: flex
            align-items: center
            text-align: center
            letter-spacing: 0.03em
            margin-top: 0
            margin-bottom: .3rem
    &-answers
        display: flex
        justify-content: space-between
        &__span
            cursor: pointer
            display: flex
            justify-content: center
            align-items: center
            width: 1.7rem
            height: .7rem
            font-style: normal
            font-weight: 500
            font-size: .25rem
            line-height: 99.19%
            text-align: center
            letter-spacing: 0.03em
            text-transform: uppercase
            color: #00BBC7
            border: .02rem solid #00BBC7
            box-sizing: border-box
            border-radius: .10rem
            transition: .1s
    &-active
        background: #00BBC7
        color: #fff
    &-button
        cursor: pointer
        display: block
        font-style: normal
        font-weight: bold
        font-size: .22rem
        line-height: 99.19%
        text-align: center
        letter-spacing: 0.03em
        text-transform: uppercase
        color: #FFFFFF
        background: #9425EB
        box-shadow: 0px .04rem .04rem rgba(0, 0, 0, 0.25)
        border-radius: .05rem
        width: 100%
        padding: .3rem
        text-decoration: none
    &-answer
        border: .02rem solid #00BBC7
        box-sizing: border-box
        border-radius: .05rem
        padding: .25rem .4rem
        margin-bottom: .4rem
        &__text
            margin: 0
            font-style: normal
            font-weight: bold
            font-size: .22rem
            line-height: 99.19%
            text-align: center
            letter-spacing: 0.03em
            text-transform: uppercase
            color: #00BBC7

// reviews section

.reviews
    margin-bottom: .4rem
    position: relative
    &-container
        position: relative
    &-title
        font-style: normal
        font-weight: 900
        font-size: .4rem
        line-height: 99.19%
        letter-spacing: 0.03em
        text-transform: uppercase
        color: #00BBC7

.slider
    position: relative
    &-container
        margin-bottom: -.5rem
        overflow: hidden
        background: #FFFFFF
        box-shadow: 0px 0px .1rem rgba(0, 0, 0, 0.15)
        border-radius: .1rem
        margin: 0 .4rem
    &-item
        &__img
            display: block
            margin-bottom: .2rem
        &__ava
            position: relative
            bottom: .71rem
            display: block
            border-radius: 50%
            width: 1rem
            height: 1rem
            margin: auto
            margin-bottom: -.61rem
        &__author
            font-style: normal;
            font-weight: 500
            font-size: .3rem
            line-height: 99.19%
            letter-spacing: 0.03em
            text-transform: uppercase
            margin: .1rem 0
            text-align: center
        &__title
            font-style: normal;
            font-weight: 500
            font-size: .3rem
            line-height: 99.19%
            letter-spacing: 0.03em
            text-transform: uppercase
            margin: .1rem 0
            text-align: center
        &__paragraph
            font-style: normal
            font-weight: normal
            font-size: .2rem
            line-height: 99.19%
            display: flex
            align-items: center
            text-align: center
            letter-spacing: 0.03em
            padding: 0 .25rem
    &-review
        display: flex
        justify-content: space-between
        padding: 0 .25rem
        &__date
            font-style: normal
            font-weight: normal
            font-size: .25rem
            line-height: 99.19%
            display: flex
            align-items: center
            letter-spacing: 0.03em
            color: #AAAAAA
        &__raiting
            font-style: normal
            font-weight: bold
            font-size: .3rem
            line-height: 99.19%
            display: flex
            align-items: center
            letter-spacing: 0.03em
            text-transform: uppercase
            color: #9425EB
    &-next
        outline: none
        position: absolute
        width: .18rem
        height: .35rem
        top: 4rem
        right: .2rem
    &-prev
        outline: none
        position: absolute
        width: .18rem
        height: .35rem
        top: 4rem
        left: .2rem

.swiper-pagination-bullet 
    height: 0.14rem
    width: 0.14rem
    margin-right: .1rem
    width: .18rem
    height: .19rem
    background: #C4C4C4
    border-radius: .1rem
    &-active
        background-color: #00BBC7
    &:last-child
        margin-right: 0

.swiper-pagination
    margin-top: -.4rem
