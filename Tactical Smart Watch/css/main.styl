html
    box-sizing: border-box
    -ms-overflow-style: scrollbar
    font-family: 'Montserrat', sans-serif
    font-size: 21vw
    overflow-x: hidden

@media (min-width: 481px) {
  html {
    font-size: 100px;
    overflow-x: hidden;
  }
